<UserControl x:Class="PetShop.Views.ProductManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PetShop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="➕ Thêm mới" Width="100" Margin="5" Click="AddProduct_Click"/>
            <Button Content="✏️ Sửa" Width="100" Margin="5" Click="EditProduct_Click"/>
            <Button Content="🗑️ Xoá" Width="100" Margin="5" Click="DeleteProduct_Click"/>
        </StackPanel>

        <DataGrid x:Name="ProductGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="50"/>
                <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Giá" Binding="{Binding Price}" Width="100"/>
                <DataGridTextColumn Header="Kho" Binding="{Binding Stock}" Width="80"/>
                <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
