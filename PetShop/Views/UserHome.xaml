<Window x:Class="PetShop.Views.UserHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShop.Views"
        mc:Ignorable="d"
        Title="UserHome" Height="336" Width="auto" d:DesignWidth="744.792">
    <DockPanel>
        <!-- Sidebar -->
        <StackPanel DockPanel.Dock="Left" Width="200" Background="#eee" Margin="10">
            <TextBlock Text="Luong Pet Shop" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <Button Content=" Mua hàng" Margin="0,5" Click="ShowProduct_Click"/>
            <Button Content=" Đặt dịch vụ" Margin="0,5" Click="ShowService_Click"/>
            <Button Content=" Quản lý thú cưng" Margin="0,5" Click="ShowPets_Click"/>
            <Button Content=" Giỏ hàng" Margin="0,5" Click="ShowCart_Click"/>
            <Button Content=" Hóa đơn" Click="ShowInvoices_Click" />
            <Button Content=" Thoát" Margin="0,30,0,0" Click="Logout_Click"/>
        </StackPanel>

        <!-- Content -->
        <ContentControl x:Name="MainContent" />
    </DockPanel>
</Window>
