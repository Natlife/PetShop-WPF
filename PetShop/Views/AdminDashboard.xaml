<Window x:Class="PetShop.Views.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShop.Views"
        mc:Ignorable="d"
        Title="AdminDashboard" Height="450" Width="800">
    <DockPanel>

        <StackPanel DockPanel.Dock="Left" Width="200" Background="#eee" Margin="10">
            <TextBlock Text="Luong Pet Shop (Admin)" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <Button Content="📦 Sản phẩm" Margin="0,5" Click="ShowProducts_Click"/>
            <Button Content="🧴 Dịch vụ" Margin="0,5" Click="ShowServices_Click"/>
            <Button Content="🧾 Đơn hàng" Margin="0,5" Click="ShowOrders_Click"/>
            <Button Content="📅 Lịch hẹn" Margin="0,5" Click="ShowBookings_Click"/>
            <Button Content="🚪 Thoát" Margin="0,30,0,0" Click="Logout_Click"/>
        </StackPanel>


        <ContentControl x:Name="MainContent" />
    </DockPanel>
</Window>
